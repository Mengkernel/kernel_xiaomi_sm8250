# Platform configuration
CONFIG_BOARD_XIAOMI=y

# Set Custom localversion
CONFIG_LOCALVERSION="-cat"
CONFIG_LOCALVERSION_AUTO=y

# Increase logbuffer size
CONFIG_LOG_BUF_SHIFT=21

# Enable pstore and mtd oops
CONFIG_CMDLINE="ramoops_memreserve=4M"
CONFIG_PSTORE=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_RAM=y
CONFIG_MTD=y
CONFIG_MTD_BLOCK=y
CONFIG_MTD_OOPS=y
CONFIG_MTD_BLOCK2MTD=y
CONFIG_PANIC_ON_OOPS=n

# Enable UTS Namespace
CONFIG_UTS_NS=y

# Disable Modules signature
CONFIG_MODULE_SIG=n

# Enable Frequency statistics
CONFIG_CPU_FREQ_STAT=y

# Disable Wilocity wil6210 driver
CONFIG_WIL6210=n

# Disable DebugFS
CONFIG_DEBUG_FS=n

# Enable NAT, PEDIT and CSUM classifier Actions
CONFIG_NET_ACT_NAT=y
CONFIG_NET_ACT_PEDIT=y
CONFIG_NET_ACT_CSUM=y

# Enable QTI Smart Link Aggregation driver
CONFIG_SLA=y
CONFIG_SLA_STAIC_COLLECT=y

# Enable CNSS QCA6390 chipset support
CONFIG_CNSS_QCA6390=y

# Disable Open-channel SSD target support
CONFIG_NVM=n

# Disable QTI Haptics
CONFIG_INPUT_QTI_HAPTICS=n

# Enable AWINIC AW8697 haptics driver
CONFIG_INPUT_AW8697_HAPTIC=y

# Disable support for Virtual terminal
CONFIG_VT=n

# Enable high performance logchar driver
CONFIG_XLOGCHAR=y

# Enable SPI connected IR LED support
CONFIG_RC_CORE=y
CONFIG_LIRC=y
CONFIG_RC_DECODERS=y
CONFIG_RC_DEVICES=y
CONFIG_IR_SPI=y

# Disable USB Serial converter support
CONFIG_USB_SERIAL=n

# Enable USB Remote NDIS support
CONFIG_USB_CONFIGFS_RNDIS=y

# Disable APP Armor security
CONFIG_SECURITY_APPARMOR=n

# Disable USB CDC ADM support
CONFIG_USB_ACM=n

# Disable MSM 11AD chip support
CONFIG_MSM_11AD=n

# Disable PASR
CONFIG_MEMORY_HOTPLUG=n
CONFIG_QCOM_MEM_OFFLINE=n

# Disable QTI XR Reference device Misc driver
CONFIG_QTI_XR_SMRTVWR_MISC=n

# Disable Semtech SX150x I2C GPIO expander pinctrl driver
CONFIG_PINCTRL_SX150X=n

# Disable nvensense CH-101 ultra-low Time-of-Flight sensor 
CONFIG_CH101_I2C=n

# Disable ADS7052 TDK Thermistor
CONFIG_ADS7052_TDK_THERMISTOR=n

# Enable Fingerprint support
CONFIG_INPUT_FINGERPRINT=y

# Disable ST FTS
CONFIG_TOUCHSCREEN_FTS=n

# Enable Touchfeature driver
CONFIG_TOUCHSCREEN_XIAOMI_TOUCHFEATURE=y

# Disable qcom smb1390 and smb1355
CONFIG_SMB1390_CHARGE_PUMP_PSY=n
CONFIG_SMB1355_SLAVE_CHARGER=n

# Disable Halo Microelectronics HL6111R
CONFIG_HL6111R=n

# Enable AUDIT as SECURITY SELINUX dependency
CONFIG_AUDIT=y

# Enable ION camera heap
CONFIG_ION_CAMERA_HEAP=y

# Disable DM crypto target creation
CONFIG_DM_CRYPT=n

# Disable HID raw support
CONFIG_HIDRAW=n

# Disable USB webcam support
CONFIG_USB_CONFIGFS_F_UVC=n

# Disable ARM DynamIQ Shared Unit (DSU) PMU
CONFIG_ARM_DSU_PMU=n

# Enable iptables match connection tracking byte counter
CONFIG_NETFILTER_XT_MATCH_CONNBYTES=y

# Build qualcomm high performance ipa driver
CONFIG_RMNET_PERF=y
CONFIG_RMNET_SHS=y
